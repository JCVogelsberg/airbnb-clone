<%= content_for(:title, "Show Listing | AirBnB Clone" ) %>

<h3><%= @listing.address %> </h3>
<br>
<p>  <%= @listing.city %> (<%= @listing.neighborhood %>) </p>
<br>
<p> <%= number_to_currency(@listing.price) %> </p>
<br>
<p> <%= @listing.home_type %> </p>
<br>
<p> <%= @listing.description %> </p>
<br>

<p><%= link_to "Edit listing", edit_listing_path(@listing.id), :class=> "btn btn-default" %></p>
<br>
<p><%= link_to "Delete", listing_path(@listing),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"},
                         :class => "btn btn-danger" %></p>
