<%= content_for(:title, "Show Listing | AirBnB Clone" ) %>

<h3><%= @listing.address %> </h3>
<br>
<p> <%= @listing.neighborhood %> </p>
<br>
<p> <%= @listing.city %> </p>
<br>
<p> <%= @listing.price %> </p>
<br>
<p> <%= @listing.home_type %> </p>
<br>
<p> <%= @listing.description %> </p>
<br>

<p><%= link_to "Edit listing", edit_listing_path(:id), id: "new_link", remote: true, :class=> "btn btn-default" %></p>
<br>
<p><%= link_to "Delete", listing_path(@listing),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"},
                         :class => "btn btn-danger" %></p>
