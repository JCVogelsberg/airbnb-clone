<h3> Here are some current available listings: </h3>
<br>
<h4> Would you like to list a property?
  <%= link_to "New listing", new_listing_path, id: "new_link", remote: true, :class=> "btn btn-default" %>
</h4>

<br>
<br>

<ul id="listings">
  <% @listings.each do |listing| %>
  <li> <%= link_to "#{listing.address}", listing_path("#{listing.id}"), id: "new_link", :class=> "btn btn-default" %> </li>
  <li> <%=listing.neighborhood %> </li>
  <li> <%=listing.city %> </li>
  <li> <%=number_to_currency(listing.price) %> </li>
  <li> <%=listing.home_type %> </li>
  <li> <%=listing.description %> </li>
  <hr>
  <% end %>
</ul></br>







